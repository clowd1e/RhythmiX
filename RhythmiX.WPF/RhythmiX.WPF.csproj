<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Icons\app_icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Icons\btn_close.svg" />
    <None Remove="Icons\btn_minimize.svg" />
    <None Remove="Images\app_logo.png" />
    <None Remove="Images\default.png" />
    <None Remove="Images\envelope.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Icons\app_icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RhythmiX.ClassLibrary\RhythmiX.ClassLibrary.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Fonts\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpVectors" Version="1.8.4" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\btn_close.svg" />
    <Resource Include="Icons\btn_minimize.svg" />
    <Resource Include="Images\app_logo.png" />
    <Resource Include="Images\default.png" />
    <Resource Include="Images\envelope.png" />
  </ItemGroup>

</Project>
