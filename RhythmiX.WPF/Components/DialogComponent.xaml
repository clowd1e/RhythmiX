<UserControl x:Class="RhythmiX.WPF.Components.DialogComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RhythmiX.WPF.Components"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded">
    <Border CornerRadius="10" Height="162"
        MaxWidth="300"
        Background="{StaticResource ConfirmWindowBack}">
        <StackPanel Margin="30 0">
            <TextBlock x:Name="title"
                   Text="Success!"
                   Margin="0 38 0 0"
                   Style="{StaticResource ConfirmTextStyle}"/>
            
            <Button x:Name="close"
                        Margin="0 42 0 0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource ConfirmButtonStyle}"
                        Content="OK" />
        </StackPanel>
    </Border>
</UserControl>
