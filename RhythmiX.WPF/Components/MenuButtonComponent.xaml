<UserControl x:Class="RhythmiX.WPF.Components.MenuButtonComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RhythmiX.WPF.Components"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded">
    <RadioButton
        x:Name="MenuButton"
        Style="{StaticResource MenuButton}"
        GroupName="MenuButtons">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="icon" Style="{StaticResource MenuButtonIcon}"
                Source="/Images/default_main.png"></Image>
            <TextBlock Style="{StaticResource MenuButtonText}"
                x:Name="text" Text="Default text" />
        </StackPanel>
    </RadioButton>
</UserControl>
