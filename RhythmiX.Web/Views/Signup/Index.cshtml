@{
    ViewData["Title"] = "Signup";
    ViewData["StyleLink"] = "signup.css";
    Layout = "_AuthzLayout";
}

<div class="singup-container">
    <div class="signup-box">
        <div class="signup-logo">
            <h2 class="welcome-text">Welcome to</h2>
            <img src="~/images/app_logo.png" class="app-logo" />
        </div>

        <div class="sound-track">
            <img src="~/images/sound_track.png" />
        </div>

        <form class="form">
            <div class="input-group">
                <label for="username">Username</label>
                <div class="input-icon">
                    <img src="~/images/user_circle.png" class="icon" />
                    <input type="text" name="username" placeholder="Type your username" />
                </div>
            </div>

            <div class="input-group">
                <label for="email">Email</label>
                <div class="input-icon">
                    <img src="~/images/envelope.png" class="icon" />
                    <input type="email" name="email" placeholder="Type your email" />
                </div>
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <div class="input-icon">
                    <img src="~/images/lock_key.png" class="icon" />
                    <input type="password" name="password" placeholder="Type your password" />
                </div>
            </div>

            <div class="input-group">
                <label for="repeat-password">Confirm Password</label>
                <div class="input-icon">
                    <img src="~/images/lock_key.png" class="icon" />
                    <input type="password" name="repeat-password" placeholder="Type your password" />
                </div>
            </div>

            <button type="submit" class="signup-button" asp-controller="login" asp-action="index">Submit</button>
        </form>
    </div>
</div>